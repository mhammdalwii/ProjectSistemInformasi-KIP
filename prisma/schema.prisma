// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --- MODEL ADMIN ---
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
}

// --- MODEL SISWA ---
model Siswa {
  id        String   @id @default(cuid())
  nisn      String   @unique
  name      String
  kelas     String?
  
  status    StatusKIP @default(PROSES)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Enum untuk Status KIP
enum StatusKIP {
  PROSES
  DITERIMA
  DITOLAK
}